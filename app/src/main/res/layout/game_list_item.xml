<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/gameFrontCover"
            android:layout_width="@dimen/game_front_cover_width"
            android:contentDescription="@string/game_cover"
            android:layout_height="@dimen/game_front_cover_height"
            android:src="@drawable/default_front_cover" />

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/game_title_margin_start"
            android:layout_toEndOf="@+id/gameFrontCover"
            android:gravity="center"
            android:textColor="@color/colorAccentJP"
            android:textSize="@dimen/game_title_text_size" />

</RelativeLayout>